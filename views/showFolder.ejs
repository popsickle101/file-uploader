<!DOCTYPE html>
<html>
<head>
  <title>Folder: <%= folder.name %></title>
</head>
<body>
  <h1>Folder: <%= folder.name %></h1>

  <!-- Display the list of files in the folder -->
  <h2>Files in this folder:</h2>
  <% if (files.length > 0) { %>
    <ul>
      <% files.forEach(file => { %>
        <li>
          <a href="/uploads/<%= folder.id %>/<%= file.filename %>"><%= file.filename %></a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No files in this folder.</p>
  <% } %>

  <!-- File upload form -->
  <h2>Upload a new file</h2>
  <form action="/folders/<%= folder.id %>/upload" method="POST" enctype="multipart/form-data">
    <input type="file" name="file" required>
    <button type="submit">Upload</button>
  </form>

  <!-- Edit and Delete folder options -->
  <a href="/folders/<%= folder.id %>/edit">Edit Folder</a> | 
  <form action="/folders/<%= folder.id %>?_method=DELETE" method="POST" style="display:inline;">
    <button type="submit">Delete Folder</button>
  </form>
  
  <br><br>
  <a href="/folders">Back to Folder List</a>
</body>
</html>
